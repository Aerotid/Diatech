include ../two-columns/two-columns
include ../info-block-1/info-block-1
include ../../common/multiple-blocks

mixin activity
    .activity.activity_padding-top
        +two-columns
            +set('left')
                div.anim-overflow
                    +info-block-1('<div id="activity_anim">Техническая диагностика и&nbsp;экспертиза промышленной безопасности</div>', null, 'ДИАТЕХ применяет широкий диапазон методов неразрушающего контроля и передовое оборудование для проведения технической диагностики устройств в различных областях промышленности', {
                        url: '/directions.html',
                        anchor: 'Подробнее об услугах'
                    }, {class: 'activity__info-block'})
            +set('right')
                div.anim-overflow
                    .activity__title#anim Направления
                    .activity__title деятельности
                    +info-block-1('<div id="activity_anim_2">Научная деятельность и&nbsp;технологии</div>', null, 'Компания имеет собственный Научно-исследовательский центр, ' +
                    'персонал научного центра - профессора, доктора наук, программисты непрерывно совершенствуют технологии ДИАТЕХ.', {
                        url: '/company.html',
                        anchor: 'Подробнее о компании'
                    }, {class: 'activity__info-block activity__info-block_right'})